meta {
  name: Atualizar Perfil de Cliente
  type: "http"
}

patch {
  url: {{baseUrl}}/customers/me
  body: json
  auth: bearer
}

body:json {
  {
    "user": {
      "name": "Cliente Atualizado",
      "email": "cliente.atualizado@example.com",
      "password": "nova-senha"
    },
    "customer": {
      "zipCode": "01001-000",
      "street": "Praça da Sé",
      "number": "101",
      "complement": "Sala 2",
      "neighborhood": "Sé",
